<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:GeometryApp.ViewModels"
             xmlns:views="clr-namespace:GeometryApp.Views"
			 xmlns:fluent="clr-namespace:Avalonia.Themes.Fluent;assembly=Avalonia.Themes.Fluent"
             x:Class="GeometryApp.App">
  
	<Application.Resources>
		<vm:HalfValueConverter x:Key="HalfValueConverter" />
	</Application.Resources>

	<!-- Темы и стили -->
	<Application.Styles>
		<fluent:FluentTheme />
	</Application.Styles>

	<!-- DataTemplates (ТОЛЬКО шаблоны!) -->
	<Application.DataTemplates>
		<views:ViewLocator />
	</Application.DataTemplates>
	
</Application>


